<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Your search returned <%= @items.count %> items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.sku %>
        <%= item.shortDescription %>
        <%= item.salePrice %>
        <%= item.customerReviewAverage %>
      </p>
    </div>
  <% end %>
</div>
